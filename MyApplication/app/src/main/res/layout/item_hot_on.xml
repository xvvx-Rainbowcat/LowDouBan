<?xml version="1.0" encoding="utf-8"?>
<android.widget.LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_hot_on_containner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/item_hot_on_cover"
        android:layout_width="93dp"
        android:layout_height="130dp"
        android:layout_margin="16dp" />

    <LinearLayout
        android:layout_width="135dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_hot_on_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="moviemoviemoviemoviemovie"
            android:textSize="15sp" />

        <LinearLayout
            android:id="@+id/item_hot_on_rating_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RatingBar
                android:layout_marginRight="15dp"
                android:id="@+id/item_hot_on_rating_bar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                style="@style/RatingBar_custom"
                android:theme="@style/RatingBar_custom"
                android:numStars="5"
                android:stepSize="1" />

            <TextView
                android:id="@+id/item_hot_on_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="评分" />
        </LinearLayout>

        <TextView
            android:id="@+id/item_hot_on_directors"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="导演:"
            android:textSize="11sp" />

        <TextView
            android:id="@+id/item_hot_on_casts"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="演员:"
            android:textSize="11sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="80dp"
        android:layout_height="140dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/item_hot_on_viewer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:text="多少人看过"
            android:textSize="11sp" />

        <Button
            android:id="@+id/item_hot_on_ticket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="购票" />
    </LinearLayout>

</android.widget.LinearLayout>